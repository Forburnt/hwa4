<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="{{seo.image}}" />
    <link rel="shortcut icon" type="image/png" href="{{seo.image}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{seo.title}}</title>
    
    <link rel="canonical" href="{{seo.url}}">
    <meta name="description" content="{{seo.description}}">
    <meta property="og:title" content="{{seo.title}}">
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{seo.url}}">
    <meta property="og:description" content="{{seo.description}}">
    <meta property="og:image" content="{{seo.image}}">
    <meta name="twitter:card" content="summary">

    <link rel="stylesheet" href="/hordewatch.css" />
  </head>
  <body>
    <div class="wrapper" style="width: {{prefs.width}}%;">
      <header>
        {{!-- <h1>hordewatch</h1> --}}
      </header>
      <div class="content">
        <div class="main">
          <div class="player">
            <video
              controls
              id="player"
              width="100%"
              poster="{{seo.poster}}"
              src="{{seo.default_video}}">
              <track
                id="subs_en"
                label="English"
                kind="subtitles"
                srclang="en"
                src="pmmm/pmmm-ep1-eng-2.vtt"
                default />
              <track
                id="subs_ru"
                label="Russian"
                kind="subtitles"
                srclang="ru"
                src="pmmm/pmmm-ep1-rus-4.vtt" />
            </video>
          </div>
          <div class="chat">
            <div class="chatbox">
              <div class="kludge" id="chat_kludge">
                <div class="msg">
                  <div class="greet_header">hordewatch</div>
                  <div class="content">Welcome!</div>
                </div>
              </div>
              
            </div>
            <div class="inputbox">
              <input
                id="input_msg"
                class="msg"
                type="text"
                required
                placeholder="{{tr.chat_prompt}}"
              />
            </div>
          </div>
        </div>
        <div class="settings">
          <div class="room_settings">
            <div class="input_username">
              <label for="input_username">{{tr.username}}:</label>
              <input
                id="input_username"
                class="username"
                type="text"
                required
                placeholder="{{tr.username}}"
                minlength="2" maxlength="16"
              />
            </div>
            <div class="input_room">
              <label for="input_room">{{tr.room}}:</label>
              <input
                id="input_room"
                class="room"
                type="text"
                required
                placeholder="{{tr.room}}"
                minlength="2" maxlength="16"
              />
            </div>
            <div class="room_buttons">
              <button id="btn_join">{{tr.join}}</button>
              <div>
                <input type="checkbox" id="cbox_sync" checked>
                <label for="cbox_sync">{{tr.sync}}</label>
              </div>
              <div>
                <input type="checkbox" id="cbox_bump" checked>
                <label for="cbox_bump">{{tr.bump}}</label>
              </div>
            </div>
            <div class="chat_buttons">
              <div>
                <input type="radio" id="radio_sidebar_chat"
                  name="sidebar_mode" value="chat" checked>
                <label for="radio_sidebar_chat">{{tr.chat}}</label>
              </div>
              <div>
                <input type="radio" id="radio_sidebar_userlist"
                  name="sidebar_mode" value="userlist">
                <label for="radio_sidebar_userlist">{{tr.members}}</label>
              </div>
            </div>
          </div>
          <div class="video_settings">
            <div class="input_url">
              <label for="input_url">{{tr.video_url}}:</label>
              <input
                id="input_url"
                class="url"
                type="url"
                required
                placeholder="{{tr.video_url}}"
              />
            </div>
            <div class="video_btns">
              <button id="btn_load_video">{{tr.load_video}}</button>
              <input
                id="input_file"
                class="file"
                type="file"
                required
              />
            </div>
            <div class="input_subs">
              <label for="select_subs">Subs:</label>
              <select name="select_subs" id="select_subs">
                <option value="">None</option>
                <option value="pmmm/ep1">PMMM Ep1</option>
                <option value="pmmm/ep2">PMMM Ep2</option>
              </select>
              <div></div>
            </div>
          </div>
          <footer>
            <div class="motd">
              <i>{{tr.motd}}</i>
            </div>
            <div class="credits">
              <a class="selfref" href="{{seo.url}}">
                <strong>hordewatch</strong>
                <img class="logo" src="{{seo.image}}">
              </a>
              {{tr.by_author}} {{seo.author}}
            </div>
            <div class="version">
              v{{seo.version}}
            </div>
            <div class="license">
              <a href="{{seo.license_url}}">{{seo.license}}</a>
            </div>
            <div class="help">
              <a href="{{seo.help_url}}">{{tr.help}}</a>
              Â·
              <a href="{{seo.debug_url}}">{{tr.debug}}</a>
            </div>
          </footer>
        </div>
      </div>
      {{!-- <footer></footer> --}}
    </div>
    <script type="module" src="/hordewatch.js"></script>
  </body>
</html>
